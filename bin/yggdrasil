pwd=$(pwd)
cd $HOME/node-executables
if [ $1 = "init" ]; then
echo "Creating $HOME/node-executables"
mkdir -p $HOME/node-executables
cd $HOME/node-executables
echo "Please answer the npm-init prompts."
npm init
echo "Installing david as a package updater"
yarn add david
echo 'export PATH=$PATH:$HOME/node-executables/node_modules/.bin/' | tee -a $HOME/.profile
echo "Reloading configuration"
source $HOME/.profile
echo "Done! Be sure to add the yggdrasil and ygg executables to your PATH."
elif [ $1 = "remove" ]; then
yarn remove $2
elif [ $1 = "update" ]; then
david update $2
elif [ $1 = "check-update" ]; then
david
else
yarn add $1
fi
cd $pwd
